@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
   
</head>
<body>

    <div class="title">
        <h2 class="pagetopper">Contact Us</h2>
        <p class="text-center w-responsive mx-auto">
            Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
            a matter of hours to help you.
        </p>
        <h3>@Model.SuccessMessage</h3>
    </div>

    <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" asp-page="/Contact" asp-page-handler="OnPost" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="customerName">Your name</label>
                            <input asp-for="customerName" type="text" id="customerName" name="customerName" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="customerEmail">Your email</label>
                            <input asp-for="customerEmail" type="text" id="customerEmail" name="customerEmail" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="customerSubject">Subject of Message</label>
                            <input asp-for="customerSubject" type="text" id="customerSubject" name="customerSubject" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form">
                            <label for="customerMessage">Your message</label>
                            <textarea asp-for="customerMessage" id="customerMessage" name="customerMessage" rows="2" class="form-control md-textarea"></textarea>
                        </div>
                    </div>
                </div>
                <div class="text-center text-md-left">
                    <button type="submit" class="btn btn-dark" style="background-color: #4d6b5c;">Send!</button>
                </div>
                <div class="status"></div>
            </form>

        </div>

        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0 iconcolor">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>
                        223 Circle Street <br>
                        Douglas <br>
                       Isle of Man
                    </p>
                </li>
                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+44 07624 123456</p>
                </li>
                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>mathukhaicheiom@gmail.com</p>
                </li>
            </ul>
        </div>
    </div>

    <h3>Our Location</h3>
    <div id="map"></div>

</body>
</html>
