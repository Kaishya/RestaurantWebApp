@page
@model RestaurantWebApp.Pages.Menu.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="pagetopper">Details</h1>

<div>
    <h4>FoodItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodItem.Item_name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodItem.Item_desc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodItem.Available)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodItem.Available)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodItem.Vegetarian)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodItem.Vegetarian)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodItem.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodItem.Price)
        </dd>
             <dt class ="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodItem.ImageData)
        </dt>
        <dd class="col-sm-10">
            @{
                try
                {
                    <img class="square-menu" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.FoodItem.ImageData))" alt="@Html.DisplayFor(model => model.FoodItem.ImageDescription)" />
                }
                catch
                {
                    <td>
                        <img class="img-thumb" src="/Images/no-image.png" alt="No Image provided" />
                    </td>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.FoodItem?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
